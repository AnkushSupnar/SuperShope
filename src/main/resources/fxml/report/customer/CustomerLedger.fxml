<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="560.0" prefWidth="900.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.report.customer.CustomerLedgerController">
   <children>
      <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to right, #1A237E, #283593, #3949AB); -fx-padding: 14 20;">
               <children>
                  <StackPane prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 8;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="USERS" size="1.1em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: WHITE; -fx-font-size: 18px; -fx-font-weight: bold;" text="Customer Ledger">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <!-- Filter Bar -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: #FFFFFF; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 2);">
               <children>
                  <VBox spacing="3.0">
                     <children>
                        <Label style="-fx-text-fill: #5C6BC0; -fx-font-size: 11px; -fx-font-weight: bold;" text="Customer Name" />
                        <TextField fx:id="txtCustomerName" prefWidth="180.0" promptText="Select Customer" style="-fx-font-size: 14px;" />
                     </children>
                  </VBox>
                  <VBox spacing="3.0">
                     <children>
                        <Label style="-fx-text-fill: #5C6BC0; -fx-font-size: 11px; -fx-font-weight: bold;" text="From Date" />
                        <DatePicker fx:id="dateFrom" prefWidth="130.0" />
                     </children>
                  </VBox>
                  <VBox spacing="3.0">
                     <children>
                        <Label style="-fx-text-fill: #5C6BC0; -fx-font-size: 11px; -fx-font-weight: bold;" text="To Date" />
                        <DatePicker fx:id="dateTo" prefWidth="130.0" />
                     </children>
                  </VBox>
                  <Button fx:id="btnShow" mnemonicParsing="false" prefHeight="32.0" style="-fx-background-color: linear-gradient(to right, #3949AB, #1A237E); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="Show">
                     <graphic>
                        <FontAwesomeIcon fill="white" glyphName="SEARCH" size="1em" />
                     </graphic>
                     <VBox.margin>
                        <Insets top="14.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="btnHome" mnemonicParsing="false" prefHeight="32.0" style="-fx-background-color: transparent; -fx-text-fill: #3949AB; -fx-border-color: #3949AB; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="Back">
                     <graphic>
                        <FontAwesomeIcon fill="#3949AB" glyphName="ARROW_LEFT" size="1em" />
                     </graphic>
                     <VBox.margin>
                        <Insets top="14.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </HBox>

            <!-- Customer Info Bar -->
            <HBox fx:id="customerInfoBar" alignment="CENTER_LEFT" spacing="25.0" style="-fx-background-color: #E8EAF6; -fx-padding: 8 20;" visible="false">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <FontAwesomeIcon fill="#3949AB" glyphName="USER" size="1em" />
                        <Label fx:id="lblCustomerName" style="-fx-text-fill: #1A237E; -fx-font-size: 13px; -fx-font-weight: bold;" text="" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <FontAwesomeIcon fill="#3949AB" glyphName="PHONE" size="1em" />
                        <Label fx:id="lblCustomerContact" style="-fx-text-fill: #3949AB; -fx-font-size: 12px;" text="" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <FontAwesomeIcon fill="#3949AB" glyphName="MAP_MARKER" size="1em" />
                        <Label fx:id="lblCustomerAddress" style="-fx-text-fill: #3949AB; -fx-font-size: 12px;" text="" />
                     </children>
                  </HBox>
               </children>
            </HBox>

            <!-- Table -->
            <TableView fx:id="table" stylesheets="@../../css/report-table.css" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colSr" prefWidth="50.0" text="SR" />
                  <TableColumn fx:id="colDate" prefWidth="110.0" text="DATE" />
                  <TableColumn fx:id="colBillNo" prefWidth="90.0" text="BILL NO" />
                  <TableColumn fx:id="colItems" prefWidth="250.0" text="ITEMS" />
                  <TableColumn fx:id="colGrandTotal" prefWidth="110.0" text="GRAND TOTAL" />
                  <TableColumn fx:id="colPaid" prefWidth="110.0" text="PAID" />
                  <TableColumn fx:id="colDue" prefWidth="110.0" text="DUE" />
               </columns>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="8.0" />
               </VBox.margin>
            </TableView>

            <!-- Summary -->
            <HBox alignment="CENTER" spacing="25.0" style="-fx-padding: 10 20;">
               <children>
                  <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: linear-gradient(to right, #E8EAF6, #C5CAE9); -fx-background-radius: 10; -fx-padding: 10 22;">
                     <children>
                        <FontAwesomeIcon fill="#1A237E" glyphName="SHOPPING_CART" size="1.1em" />
                        <Label style="-fx-text-fill: #1A237E; -fx-font-size: 12px; -fx-font-weight: bold;" text="Total Purchases:" />
                        <Label fx:id="lblTotalPurchases" style="-fx-text-fill: #3949AB; -fx-font-size: 14px; -fx-font-weight: bold;" text="0.0">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: linear-gradient(to right, #E8F5E9, #C8E6C9); -fx-background-radius: 10; -fx-padding: 10 22;">
                     <children>
                        <FontAwesomeIcon fill="#2E7D32" glyphName="CHECK_CIRCLE" size="1.1em" />
                        <Label style="-fx-text-fill: #2E7D32; -fx-font-size: 12px; -fx-font-weight: bold;" text="Total Paid:" />
                        <Label fx:id="lblTotalPaid" style="-fx-text-fill: #2E7D32; -fx-font-size: 14px; -fx-font-weight: bold;" text="0.0">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: linear-gradient(to right, #FCE4EC, #F8BBD0); -fx-background-radius: 10; -fx-padding: 10 22;">
                     <children>
                        <FontAwesomeIcon fill="#AD1457" glyphName="EXCLAMATION_CIRCLE" size="1.1em" />
                        <Label style="-fx-text-fill: #AD1457; -fx-font-size: 12px; -fx-font-weight: bold;" text="Balance Due:" />
                        <Label fx:id="lblBalanceDue" style="-fx-text-fill: #AD1457; -fx-font-size: 14px; -fx-font-weight: bold;" text="0.0">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
