<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="560.0" prefWidth="900.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.report.customer.OutstandingDuesController">
   <children>
      <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to right, #1A237E, #283593, #3949AB); -fx-padding: 14 20;">
               <children>
                  <StackPane prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 8;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="CREDIT_CARD" size="1.1em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: WHITE; -fx-font-size: 18px; -fx-font-weight: bold;" text="Outstanding Dues">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <!-- Action Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 2);">
               <children>
                  <Button fx:id="btnRefresh" mnemonicParsing="false" prefHeight="32.0" style="-fx-background-color: linear-gradient(to right, #3949AB, #1A237E); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="Refresh">
                     <graphic>
                        <FontAwesomeIcon fill="white" glyphName="REFRESH" size="1em" />
                     </graphic>
                  </Button>
                  <Button fx:id="btnHome" mnemonicParsing="false" prefHeight="32.0" style="-fx-background-color: transparent; -fx-text-fill: #3949AB; -fx-border-color: #3949AB; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="Back">
                     <graphic>
                        <FontAwesomeIcon fill="#3949AB" glyphName="ARROW_LEFT" size="1em" />
                     </graphic>
                  </Button>
                  <StackPane HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="8.0" style="-fx-background-color: linear-gradient(to right, #FCE4EC, #F8BBD0); -fx-background-radius: 10; -fx-padding: 8 18;">
                     <children>
                        <FontAwesomeIcon fill="#AD1457" glyphName="EXCLAMATION_TRIANGLE" size="1.1em" />
                        <Label style="-fx-text-fill: #AD1457; -fx-font-size: 12px; -fx-font-weight: bold;" text="Customers with Dues:" />
                        <Label fx:id="lblCustomerCount" style="-fx-text-fill: #AD1457; -fx-font-size: 14px; -fx-font-weight: bold;" text="0">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </HBox>

            <!-- Table -->
            <TableView fx:id="table" stylesheets="@../../css/report-table.css" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colSr" prefWidth="50.0" text="SR" />
                  <TableColumn fx:id="colCustomer" prefWidth="180.0" text="CUSTOMER NAME" />
                  <TableColumn fx:id="colContact" prefWidth="120.0" text="CONTACT" />
                  <TableColumn fx:id="colTotalBills" prefWidth="90.0" text="TOTAL BILLS" />
                  <TableColumn fx:id="colTotalAmount" prefWidth="120.0" text="TOTAL AMOUNT" />
                  <TableColumn fx:id="colTotalPaid" prefWidth="120.0" text="TOTAL PAID" />
                  <TableColumn fx:id="colDueAmount" prefWidth="120.0" text="DUE AMOUNT" />
               </columns>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="8.0" />
               </VBox.margin>
            </TableView>

            <!-- Summary -->
            <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: 12 20;">
               <children>
                  <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to right, #FFF3E0, #FFE0B2); -fx-background-radius: 12; -fx-padding: 12 28;">
                     <children>
                        <StackPane prefHeight="36.0" prefWidth="36.0" style="-fx-background-color: linear-gradient(to bottom right, #FFA726, #E65100); -fx-background-radius: 18;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="RUPEE" size="1.2em" />
                           </children>
                        </StackPane>
                        <VBox spacing="2.0">
                           <children>
                              <Label style="-fx-text-fill: #E65100; -fx-font-size: 11px;" text="Total Outstanding" />
                              <Label fx:id="lblTotalOutstanding" style="-fx-text-fill: #E65100; -fx-font-size: 18px; -fx-font-weight: bold;" text="0.0">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to right, #E8F5E9, #C8E6C9); -fx-background-radius: 12; -fx-padding: 12 28;">
                     <children>
                        <StackPane prefHeight="36.0" prefWidth="36.0" style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #2E7D32); -fx-background-radius: 18;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="CHECK" size="1.2em" />
                           </children>
                        </StackPane>
                        <VBox spacing="2.0">
                           <children>
                              <Label style="-fx-text-fill: #2E7D32; -fx-font-size: 11px;" text="Total Collected" />
                              <Label fx:id="lblTotalCollected" style="-fx-text-fill: #2E7D32; -fx-font-size: 18px; -fx-font-weight: bold;" text="0.0">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
