                        <VBox alignment="TOP_LEFT" spacing="4.0">
                           <children>
                              <Label text="ikMmata">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="MONEY" size="0.9em" />
                                 </graphic>
