<AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="1100.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.create.AddItemController">
