                        <VBox alignment="TOP_LEFT" spacing="4.0">
                           <children>
                              <Label text="Mmaalaacao naava">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="CUBE" size="0.9em" />
