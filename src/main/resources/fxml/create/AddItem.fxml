                                 </graphic>
                              </Button>
                              <Button fx:id="btnExit" mnemonicParsing="false" prefHeight="36.0" prefWidth="82.0" style="-fx-background-color: transparent; -fx-text-fill: #455A64; -fx-border-color: #78909C; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-cursor: hand;" text="BACK">
