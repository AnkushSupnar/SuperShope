                                 <graphic>
                                    <FontAwesomeIcon fill="#E65100" glyphName="EDIT" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="36.0" prefWidth="82.0" style="-fx-background-color: transparent; -fx-text-fill: #E65100; -fx-border-color: #E65100; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-cursor: hand;" text="CLEAR">
