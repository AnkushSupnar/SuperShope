                              <TextField fx:id="txtBarCode" prefHeight="36.0" promptText="Click and scan Bar code" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px; -fx-font-weight: bold;">
