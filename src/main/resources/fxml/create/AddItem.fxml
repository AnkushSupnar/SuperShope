               <children>

                  <!-- LEFT: Form Card -->
                  <VBox alignment="TOP_CENTER" prefWidth="380.0" spacing="0.0" style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #FFF3E0); -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(230,81,0,0.12), 12, 0, 0, 4); -fx-padding: 20;">
