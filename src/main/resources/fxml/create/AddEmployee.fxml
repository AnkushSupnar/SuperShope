<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="1100.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.create.AddEmployeeController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="8.0">
         <children>

            <!-- ======== HEADER BAR (Green Gradient) ======== -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 12 20; -fx-background-color: linear-gradient(to right, #66BB6A, #2E7D32); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(46,125,50,0.3), 8, 0, 0, 3);">
               <children>
                  <StackPane prefHeight="38.0" prefWidth="38.0" style="-fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 19;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="USER_PLUS" size="1.4em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Add Employee">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <!-- ======== MAIN CONTENT: Form + Table ======== -->
            <HBox spacing="14.0" VBox.vgrow="ALWAYS">
               <children>

                  <!-- LEFT: Form Card -->
                  <VBox alignment="TOP_CENTER" prefWidth="340.0" spacing="0.0" style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #E8F5E9); -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(46,125,50,0.12), 12, 0, 0, 4); -fx-padding: 24;">
                     <children>

                        <!-- Icon + Title -->
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #2E7D32); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="USER" size="1.8em" />
                           </children>
                        </StackPane>
                        <Label style="-fx-text-fill: #1B5E20; -fx-font-size: 15px; -fx-font-weight: bold;" text="Employee Details">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="8.0" bottom="16.0" />
                           </VBox.margin>
                        </Label>

                        <!-- Full Name -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Full Name">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="USER" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtName" prefHeight="38.0" promptText="Enter Employee Full Name" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Address -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Address">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="MAP_MARKER" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtAddress" prefHeight="38.0" promptText="Enter Employee Address" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Contact -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Contact No">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="PHONE" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtContact" prefHeight="38.0" promptText="Enter Mobile Number" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Email -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Email">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="ENVELOPE" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtEmail" prefHeight="38.0" promptText="Enter Email Address" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Role -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Role">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="BRIEFCASE" size="0.9em" />
                                 </graphic>
                              </Label>
                              <ComboBox fx:id="cmbRole" prefHeight="38.0" maxWidth="1.7976931348623157E308" promptText="Select Employee Role" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="16.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(to right, #66BB6A, #2E7D32); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(46,125,50,0.3), 4, 0, 0, 2);" text="SAVE">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="CHECK" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnUpadate" mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: #2E7D32; -fx-border-color: #2E7D32; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="UPDATE">
                                 <graphic>
                                    <FontAwesomeIcon fill="#2E7D32" glyphName="EDIT" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnExit" mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: #455A64; -fx-border-color: #78909C; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="BACK">
                                 <graphic>
                                    <FontAwesomeIcon fill="#455A64" glyphName="ARROW_LEFT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Create Login User Link -->
                        <HBox alignment="CENTER" spacing="6.0">
                           <VBox.margin>
                              <Insets top="14.0" />
                           </VBox.margin>
                           <children>
                              <FontAwesomeIcon fill="#2E7D32" glyphName="SIGN_IN" size="1em" />
                              <Hyperlink fx:id="linkCreateUser" style="-fx-text-fill: #2E7D32; -fx-font-size: 13px; -fx-font-weight: bold;" text="Create Login User" />
                           </children>
                        </HBox>

                     </children>
                  </VBox>

                  <!-- RIGHT: Employee Table -->
                  <VBox spacing="0.0" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(46,125,50,0.08), 10, 0, 0, 3);">
                     <children>
                        <TableView fx:id="table" VBox.vgrow="ALWAYS" stylesheets="@../css/table.css" tableMenuButtonVisible="true" style="-fx-background-radius: 14;">
                           <columns>
                              <TableColumn fx:id="colSrno" prefWidth="55.0" text="SR.NO" />
                              <TableColumn fx:id="colName" prefWidth="150.0" text="EMPLOYEE NAME" />
                              <TableColumn fx:id="colAddress" prefWidth="150.0" text="ADDRESS" />
                              <TableColumn fx:id="colContact" prefWidth="120.0" text="CONTACT" />
                              <TableColumn fx:id="colEmail" prefWidth="150.0" text="EMAIL" />
                              <TableColumn fx:id="colRole" prefWidth="100.0" text="ROLE" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>

               </children>
            </HBox>

         </children>
      </VBox>
   </children>
</AnchorPane>
