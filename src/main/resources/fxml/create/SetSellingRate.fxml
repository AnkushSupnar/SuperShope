<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.create.SetSellingRateController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="8.0">
         <children>

            <!-- ======== HEADER BAR ======== -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 10 18; -fx-background-color: linear-gradient(to right, #FFA726, #E65100); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(230,81,0,0.3), 8, 0, 0, 3);">
               <children>
                  <StackPane prefHeight="34.0" prefWidth="34.0" style="-fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 17;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="TAG" size="1.3em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold;" text="Set Item Selling Rate">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER_RIGHT" spacing="6.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 14; -fx-padding: 5 14;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="LIST_ALT" size="1em" />
                        <Label fx:id="lblItemCount" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="0 items">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Button fx:id="btnBack" mnemonicParsing="false" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 6 14;" text="BACK">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="ARROW_LEFT" size="1em" />
                     </graphic>
                  </Button>
               </children>
            </HBox>

            <!-- ======== ITEM SEARCH ROW (Billing Style) ======== -->
            <HBox spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2); -fx-padding: 14 20;">
               <children>
                  <!-- Bar Code Field -->
                  <VBox spacing="5.0" prefWidth="180.0">
                     <children>
                        <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Bar Code">
                           <graphic>
                              <FontAwesomeIcon fill="#757575" glyphName="BARCODE" size="0.9em" />
                           </graphic>
                        </Label>
                        <TextField fx:id="txtBarcode" prefHeight="42.0" promptText="Scan / Enter Barcode" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px; -fx-font-weight: bold;">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <!-- Item Name Field -->
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Item Name">
                           <graphic>
                              <FontAwesomeIcon fill="#757575" glyphName="TAG" size="0.9em" />
                           </graphic>
                        </Label>
                        <TextField fx:id="txtItemName" prefHeight="42.0" promptText="maalaacao naava Taka" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6;">
                           <font>
                              <Font name="Kiran" size="25.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <!-- Show All Button -->
                  <VBox alignment="BOTTOM_CENTER" spacing="5.0">
                     <children>
                        <Label style="-fx-text-fill: transparent; -fx-font-size: 12px;" text=" ">
                        </Label>
                        <Button fx:id="btnShowAll" mnemonicParsing="false" prefHeight="42.0" style="-fx-background-color: transparent; -fx-text-fill: #E65100; -fx-border-color: #E65100; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 16;" text="SHOW ALL">
                           <graphic>
                              <FontAwesomeIcon fill="#E65100" glyphName="LIST" size="1em" />
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- ======== TABLE (full width, takes most space) ======== -->
            <TableView fx:id="table" VBox.vgrow="ALWAYS" stylesheets="@../css/tablemar.css" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(230,81,0,0.08), 6, 0, 0, 2);">
               <columns>
                  <TableColumn fx:id="colSr" prefWidth="55.0" text="SR.NO" />
                  <TableColumn fx:id="colName" prefWidth="280.0" text="ITEM NAME" />
                  <TableColumn fx:id="colUnit" prefWidth="80.0" text="UNIT" />
                  <TableColumn fx:id="colRate" prefWidth="110.0" text="RATE" />
                  <TableColumn fx:id="colSellingPrice" prefWidth="130.0" text="SELLING PRICE" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

            <!-- ======== BOTTOM EDIT PANEL (hidden until item selected) ======== -->
            <VBox fx:id="editPanel" managed="false" visible="false" spacing="10.0" style="-fx-background-color: linear-gradient(to right, #FFFFFF, #FFF3E0); -fx-background-radius: 12; -fx-border-color: #FFA726; -fx-border-width: 1.5; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(230,81,0,0.18), 10, 0, 0, 3); -fx-padding: 14 20;">
               <children>
                  <!-- Row 1: Item name and info badges -->
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <StackPane prefHeight="36.0" prefWidth="36.0" style="-fx-background-color: linear-gradient(to bottom right, #FFA726, #E65100); -fx-background-radius: 18;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="CUBE" size="1.2em" />
                           </children>
                        </StackPane>
                        <Label fx:id="lblItemName" style="-fx-text-fill: #1A237E; -fx-font-weight: bold;" text="">
                           <font>
                              <Font name="Kiran" size="25.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <!-- Purchase Rate badge -->
                        <VBox alignment="CENTER" spacing="1.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-padding: 4 14;">
                           <children>
                              <Label style="-fx-text-fill: #9E9E9E; -fx-font-size: 10px;" text="PURCHASE RATE">
                                 <font><Font size="10.0" /></font>
                              </Label>
                              <Label fx:id="lblCurrentRate" style="-fx-text-fill: #424242; -fx-font-size: 15px; -fx-font-weight: bold;" text="0.0">
                                 <font><Font name="System Bold" size="15.0" /></font>
                              </Label>
                           </children>
                        </VBox>
                        <!-- Current Selling Price badge -->
                        <VBox alignment="CENTER" spacing="1.0" style="-fx-background-color: #FFF3E0; -fx-background-radius: 8; -fx-padding: 4 14; -fx-border-color: #FFA726; -fx-border-radius: 8; -fx-border-width: 1;">
                           <children>
                              <Label style="-fx-text-fill: #9E9E9E; -fx-font-size: 10px;" text="CURRENT PRICE">
                                 <font><Font size="10.0" /></font>
                              </Label>
                              <Label fx:id="lblCurrentSellingPrice" style="-fx-text-fill: #E65100; -fx-font-size: 15px; -fx-font-weight: bold;" text="0.0">
                                 <font><Font name="System Bold" size="15.0" /></font>
                              </Label>
                           </children>
                        </VBox>
                        <!-- Profit badge -->
                        <VBox fx:id="profitBox" alignment="CENTER" spacing="1.0" style="-fx-background-color: #E8F5E9; -fx-background-radius: 8; -fx-padding: 4 14; -fx-border-color: #66BB6A; -fx-border-radius: 8; -fx-border-width: 1;">
                           <children>
                              <Label style="-fx-text-fill: #9E9E9E; -fx-font-size: 10px;" text="PROFIT">
                                 <font><Font size="10.0" /></font>
                              </Label>
                              <Label fx:id="lblProfit" style="-fx-text-fill: #2E7D32; -fx-font-size: 15px; -fx-font-weight: bold;" text="0.0">
                                 <font><Font name="System Bold" size="15.0" /></font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <!-- Row 2: New price input + action buttons -->
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <Label style="-fx-text-fill: #5D4037; -fx-font-size: 13px; -fx-font-weight: bold;" text="New Selling Price :">
                           <font><Font name="System Bold" size="13.0" /></font>
                        </Label>
                        <TextField fx:id="txtNewSellingPrice" prefHeight="40.0" prefWidth="200.0" promptText="Enter new price" style="-fx-padding: 6 12; -fx-background-radius: 8; -fx-border-color: #FFA726; -fx-border-radius: 8; -fx-border-width: 2; -fx-font-weight: bold;">
                           <font><Font name="System Bold" size="18.0" /></font>
                        </TextField>
                        <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="38.0" prefWidth="130.0" style="-fx-background-color: linear-gradient(to right, #FFA726, #E65100); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(230,81,0,0.3), 4, 0, 0, 2);" text="SAVE (Enter)">
                           <graphic><FontAwesomeIcon fill="white" glyphName="CHECK" size="1.1em" /></graphic>
                        </Button>
                        <Button fx:id="btnNext" mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(to right, #42A5F5, #1565C0); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(21,101,192,0.3), 4, 0, 0, 2);" text="NEXT">
                           <graphic><FontAwesomeIcon fill="white" glyphName="ARROW_DOWN" size="1.1em" /></graphic>
                        </Button>
                        <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="38.0" style="-fx-background-color: transparent; -fx-text-fill: #9E9E9E; -fx-border-color: #BDBDBD; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="CLOSE">
                           <graphic><FontAwesomeIcon fill="#9E9E9E" glyphName="TIMES" size="1em" /></graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>

         </children>
      </VBox>
   </children>
</AnchorPane>
