<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="1100.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.create.AddCustomerController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="8.0">
         <children>

            <!-- ======== HEADER BAR (Pink Gradient) ======== -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 12 20; -fx-background-color: linear-gradient(to right, #EC407A, #AD1457); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(173,20,87,0.3), 8, 0, 0, 3);">
               <children>
                  <StackPane prefHeight="38.0" prefWidth="38.0" style="-fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 19;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="USERS" size="1.4em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Add Customer">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <!-- ======== MAIN CONTENT: Form + Table ======== -->
            <HBox spacing="14.0" VBox.vgrow="ALWAYS">
               <children>

                  <!-- LEFT: Form Card -->
                  <VBox alignment="TOP_CENTER" prefWidth="400.0" spacing="0.0" style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #FCE4EC); -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(173,20,87,0.12), 12, 0, 0, 4); -fx-padding: 24;">
                     <children>

                        <!-- Icon + Title -->
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(to bottom right, #EC407A, #AD1457); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="USERS" size="1.8em" />
                           </children>
                        </StackPane>
                        <Label style="-fx-text-fill: #880E4F; -fx-font-size: 15px; -fx-font-weight: bold;" text="Customer Details">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="8.0" bottom="16.0" />
                           </VBox.margin>
                        </Label>

                        <!-- Customer Name -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Customer Name">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="USER" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtName" prefHeight="38.0" promptText="Enter Customer Full Name" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Customer Address -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Customer Address">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="MAP_MARKER" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtAddress" prefHeight="38.0" promptText="Enter Address" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Contact No -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Contact No">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="PHONE" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtContact" prefHeight="38.0" promptText="Enter Mobile Number" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Email -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Email">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="ENVELOPE" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtEmail" prefHeight="38.0" promptText="Enter Email Address" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="16.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="8.0">
                           <children>
                              <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: linear-gradient(to right, #EC407A, #AD1457); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(173,20,87,0.3), 4, 0, 0, 2);" text="SAVE">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="CHECK" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnUpdate" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-text-fill: #AD1457; -fx-border-color: #AD1457; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="UPDATE">
                                 <graphic>
                                    <FontAwesomeIcon fill="#AD1457" glyphName="EDIT" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-text-fill: #AD1457; -fx-border-color: #AD1457; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="CLEAR">
                                 <graphic>
                                    <FontAwesomeIcon fill="#AD1457" glyphName="ERASER" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnHome" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-text-fill: #455A64; -fx-border-color: #78909C; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="BACK">
                                 <graphic>
                                    <FontAwesomeIcon fill="#455A64" glyphName="ARROW_LEFT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                     </children>
                  </VBox>

                  <!-- RIGHT: Customer Table -->
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <!-- Search Bar -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(173,20,87,0.08), 8, 0, 0, 2); -fx-padding: 10 16;">
                           <children>
                              <Button fx:id="btnShowAll" mnemonicParsing="false" prefHeight="36.0" style="-fx-background-color: transparent; -fx-text-fill: #AD1457; -fx-border-color: #AD1457; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 6 14;" text="SHOW ALL">
                                 <graphic>
                                    <FontAwesomeIcon fill="#AD1457" glyphName="LIST" size="1em" />
                                 </graphic>
                              </Button>
                              <TextField fx:id="txtSearch" prefHeight="36.0" promptText="Search Customer Name" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Button fx:id="btnSearch" mnemonicParsing="false" prefHeight="36.0" style="-fx-background-color: linear-gradient(to right, #EC407A, #AD1457); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(173,20,87,0.3), 4, 0, 0, 2); -fx-padding: 6 14;" text="SEARCH">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="SEARCH" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Table -->
                        <VBox spacing="0.0" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(173,20,87,0.08), 10, 0, 0, 3);">
                           <children>
                              <TableView fx:id="table" VBox.vgrow="ALWAYS" stylesheets="@../css/table.css" style="-fx-background-radius: 14;">
                                 <columns>
                                    <TableColumn fx:id="colSrNo" prefWidth="40.0" text="SR" />
                                    <TableColumn fx:id="colName" prefWidth="180.0" text="CUSTOMER NAME" />
                                    <TableColumn fx:id="colAdddress" prefWidth="150.0" text="ADDRESS" />
                                    <TableColumn fx:id="colContact" prefWidth="120.0" text="CONTACT" />
                                    <TableColumn fx:id="colEmail" prefWidth="150.0" text="EMAIL" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>

               </children>
            </HBox>

         </children>
      </VBox>
   </children>
</AnchorPane>
