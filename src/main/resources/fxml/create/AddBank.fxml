<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="1100.0" style="-fx-background-color: #EDE7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.create.AddBankController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="8.0">
         <children>

            <!-- ======== HEADER BAR (Blue Gradient) ======== -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 12 20; -fx-background-color: linear-gradient(to right, #42A5F5, #1565C0); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(21,101,192,0.3), 8, 0, 0, 3);">
               <children>
                  <StackPane prefHeight="38.0" prefWidth="38.0" style="-fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 19;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="BANK" size="1.4em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Add Bank">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <!-- ======== MAIN CONTENT: Form + Table ======== -->
            <HBox spacing="14.0" VBox.vgrow="ALWAYS">
               <children>

                  <!-- LEFT: Form Card -->
                  <VBox alignment="TOP_CENTER" prefWidth="400.0" spacing="0.0" style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #E3F2FD); -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(21,101,192,0.12), 12, 0, 0, 4); -fx-padding: 24;">
                     <children>

                        <!-- Icon + Title -->
                        <StackPane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: linear-gradient(to bottom right, #42A5F5, #1565C0); -fx-background-radius: 30;">
                           <children>
                              <FontAwesomeIcon fill="WHITE" glyphName="BANK" size="1.8em" />
                           </children>
                        </StackPane>
                        <Label style="-fx-text-fill: #0D47A1; -fx-font-size: 15px; -fx-font-weight: bold;" text="Bank Details">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="8.0" bottom="16.0" />
                           </VBox.margin>
                        </Label>

                        <!-- Bank Name -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Bank Name">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="BANK" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtName" prefHeight="38.0" promptText="Enter Bank Name" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- IFSC Code -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="IFSC Code">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="CODE" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtIfsc" prefHeight="38.0" promptText="Enter IFSC Code" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Account No -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Account No">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="CREDIT_CARD" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtAccountNo" prefHeight="38.0" promptText="Enter Account Number" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px; -fx-font-weight: bold;">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Balance -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Account Balance">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="MONEY" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtBalance" prefHeight="38.0" promptText="Enter Opening Balance" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px; -fx-font-weight: bold;">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Owner Name -->
                        <VBox alignment="TOP_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #757575; -fx-font-size: 12px; -fx-font-weight: bold;" text="Account Owner Name">
                                 <graphic>
                                    <FontAwesomeIcon fill="#757575" glyphName="USER" size="0.9em" />
                                 </graphic>
                              </Label>
                              <TextField fx:id="txtWoner" prefHeight="38.0" promptText="Enter Account Owner Name" style="-fx-background-color: #F5F5F5; -fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-font-size: 14px;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="16.0" />
                           </VBox.margin>
                        </VBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="8.0">
                           <children>
                              <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: linear-gradient(to right, #42A5F5, #1565C0); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(21,101,192,0.3), 4, 0, 0, 2);" text="SAVE">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="CHECK" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnUpdate" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-text-fill: #1565C0; -fx-border-color: #1565C0; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="UPDATE">
                                 <graphic>
                                    <FontAwesomeIcon fill="#1565C0" glyphName="EDIT" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-text-fill: #1565C0; -fx-border-color: #1565C0; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="CLEAR">
                                 <graphic>
                                    <FontAwesomeIcon fill="#1565C0" glyphName="ERASER" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnHome" mnemonicParsing="false" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-text-fill: #455A64; -fx-border-color: #78909C; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand;" text="BACK">
                                 <graphic>
                                    <FontAwesomeIcon fill="#455A64" glyphName="ARROW_LEFT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                     </children>
                  </VBox>

                  <!-- RIGHT: Bank Table -->
                  <VBox spacing="0.0" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(21,101,192,0.08), 10, 0, 0, 3);">
                     <children>
                        <TableView fx:id="table" VBox.vgrow="ALWAYS" stylesheets="@../css/table.css" style="-fx-background-radius: 14;">
                           <columns>
                              <TableColumn fx:id="colSr" prefWidth="40.0" text="SR" />
                              <TableColumn fx:id="colName" prefWidth="150.0" text="BANK NAME" />
                              <TableColumn fx:id="colIfsc" prefWidth="100.0" text="IFSC" />
                              <TableColumn fx:id="colAccountNo" prefWidth="130.0" text="ACCOUNT NO" />
                              <TableColumn fx:id="colBalance" prefWidth="100.0" text="BALANCE" />
                              <TableColumn fx:id="colWoner" prefWidth="130.0" text="OWNER NAME" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>

               </children>
            </HBox>

         </children>
      </VBox>
   </children>
</AnchorPane>
