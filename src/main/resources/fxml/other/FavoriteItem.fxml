<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="795.0" style="-fx-background-color: #FFF8E1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ankush.controller.other.FavoriteItemController">
   <children>
      <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: linear-gradient(to right, #FF8F00, #E65100); -fx-padding: 12 20;">
               <children>
                  <Button fx:id="btnBack" mnemonicParsing="false" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 8; -fx-cursor: hand;" text="">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="ARROW_LEFT" size="1.3em" />
                     </graphic>
                  </Button>
                  <StackPane prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 8;">
                     <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="STAR" size="1.1em" />
                     </children>
                  </StackPane>
                  <Label style="-fx-text-fill: WHITE; -fx-font-weight: bold;" text="Favorite Items">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <!-- Content -->
            <HBox spacing="12.0" style="-fx-padding: 12;" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Left Panel - Category Management -->
                  <VBox prefWidth="330.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2); -fx-padding: 12;">
                     <children>
                        <Label style="-fx-text-fill: #E65100; -fx-font-weight: bold;" text="k^ToigarI banavaa">
                           <font>
                              <Font name="Kiran" size="20.0" />
                           </font>
                        </Label>
                        <HBox spacing="8.0">
                           <children>
                              <TextField fx:id="txtCategoryName" prefHeight="35.0" promptText="k^ToigarI naava Taka" style="-fx-border-color: #FFB300; -fx-border-radius: 4; -fx-background-radius: 4;" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Kiran" size="20.0" />
                                 </font>
                              </TextField>
                              <Button fx:id="btnSaveCategory" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: linear-gradient(to right, #FF8F00, #E65100); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="SAVE">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="SAVE" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                        <ListView fx:id="listCategories" style="-fx-font: 18pt 'Kiran'; -fx-border-color: #FFE0B2; -fx-border-radius: 4; -fx-background-radius: 4;" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="8.0">
                           <children>
                              <Button fx:id="btnEditCategory" mnemonicParsing="false" style="-fx-background-color: linear-gradient(to right, #42A5F5, #1565C0); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="EDIT">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="EDIT" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnDeleteCategory" mnemonicParsing="false" style="-fx-background-color: linear-gradient(to right, #EF5350, #C62828); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="DELETE">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="TRASH" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnClearCategory" mnemonicParsing="false" style="-fx-background-color: linear-gradient(to right, #78909C, #455A64); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="CLEAR">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="RECYCLE" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Right Panel - Items in Category -->
                  <VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2); -fx-padding: 12;" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="lblSelectedCategory" style="-fx-text-fill: #E65100; -fx-font-weight: bold;" text="k^ToigarI inavaDa">
                           <font>
                              <Font name="Kiran" size="20.0" />
                           </font>
                        </Label>
                        <HBox spacing="8.0">
                           <children>
                              <TextField fx:id="txtItemSearch" prefHeight="35.0" promptText="maalaacao naava SaaoQaa" style="-fx-border-color: #FFB300; -fx-border-radius: 4; -fx-background-radius: 4;" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Kiran" size="20.0" />
                                 </font>
                              </TextField>
                              <Button fx:id="btnAddItem" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: linear-gradient(to right, #66BB6A, #2E7D32); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="ADD">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="PLUS" size="1em" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnRemoveItem" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: linear-gradient(to right, #EF5350, #C62828); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="REMOVE">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="MINUS" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                        <ListView fx:id="listCategoryItems" style="-fx-font: 18pt 'Kiran'; -fx-border-color: #FFE0B2; -fx-border-radius: 4; -fx-background-radius: 4;" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
